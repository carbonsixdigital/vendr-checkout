@using Newtonsoft.Json;
@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{ 

    var themeColor = Model.GetThemeColor();
}
<div>
    <div class="border border-gray-300 rounded mb-4">
        <label class="flex items-center py-4 px-4 cursor-pointer hover:bg-gray-100">
            <input id="acceptTerms" type="checkbox" value="1" class="mr-3" />
            <span class="font-medium">I agree and accept the sites terms of service</span>
        </label>
    </div>

    <button id="continue" data-ajax-pay class="bg-@(themeColor) text-white px-4 py-4 w-full rounded hover:bg-gray-900" type="submit" disabled="disabled">Make Payment</button>

    <div id="ajax-payment-form" class="hidden"></div>
</div>