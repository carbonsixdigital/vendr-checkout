@using Vendr.Checkout.Web;
@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    var backPage = Model.GetCheckoutBackPage();
    var prevStep = Model.GetPreviousStepPage();
    var nextStep = Model.GetNextStepPage();
    var themeColor = Model.GetThemeColor();
}

<div class="flex flex-col-reverse items-center justify-between mt-8 md:flex-row">
    @if (prevStep != null)
    {
        <div>
            <a href="@(prevStep.Url)" class="text-white font-bold rounded-full px-4 py-3 checkout-prev-button">
                <i class="fa fa-angle-left"></i> @Umbraco.GetDictionaryValue("Checkout.ReturnToLabel") @(prevStep.Name)
            </a>
        </div>
    }
    else if (backPage != null)
    {
        <div>
            <a href="@(backPage.Url)" class="text-white font-bold rounded-full px-4 py-3 checkout-prev-button">
                <i class="fa fa-angle-left"></i> @Umbraco.GetDictionaryValue("Checkout.ReturnToLabel") @(backPage.Name)
            </a>
        </div>
    }
    else
    {
        <div></div>
    }
    @if (nextStep != null)
    {
        <div class="mb-4 md:mb-0 md:w-auto">
            <button id="continue" class="text-black-50 font-bold px-4 py-3 rounded-full checkout-next-button "
                    type="submit">
                @Umbraco.GetDictionaryValue("Checkout.ContinueToLabel") @(nextStep.Name)
            </button>
        </div>
    }
</div>